{
  "scripts": {
    "build": "tsc --project tsconfig.json && npm run copy-sql",
    "copy-sql": "mkdir -p dist/src/migrations/sql && cp src/migrations/sql/*.sql dist/src/migrations/sql/",
    "start": "pnpm run build && node dist/index.js",
    "lint": "npx prettier . --check && tsc --project tsconfig.json --noEmit",
    "lint-fix": "npx prettier . --write",
    "test": "npx jest ."
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.11.4",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "dependencies": {
    "commander": "^12.0.0",
    "express": "^4.19.2",
    "node-fetch": "^3.3.2",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "pino-http": "^9.0.0",
    "pino-pretty": "^11.0.0"
  }
}
